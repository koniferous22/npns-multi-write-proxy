{
  "name": "npns-multi-write-proxy",
  "version": "1.0.0",
  "description": "Multi-write proxy for NPNS project",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start:dev": "ts-node-dev src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "codegen": "npm run codegen:account-service && npm run codegen:challenge-service",
    "codegen:account-service": "graphql-codegen --config codegen-account-service.yml",
    "codegen:challenge-service": "graphql-codegen --config codegen-challenge-service.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koniferous22/npns-multi-write-proxy.git"
  },
  "keywords": [
    "Apollo",
    "Federation",
    "NPNS",
    "Typescript",
    "TypeGraphQL"
  ],
  "author": "koniferous22",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/koniferous22/npns-multi-write-proxy/issues"
  },
  "homepage": "https://github.com/koniferous22/npns-multi-write-proxy#readme",
  "dependencies": {
    "@apollo/federation": "^0.23.0",
    "apollo-server": "^2.22.2",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "graphql-tag": "^2.11.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "wait-on": "^5.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-type-graphql": "^1.18.3",
    "@types/node": "^14.14.37",
    "@types/wait-on": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.graphql": "graphql-schema-linter ./*.graphql"
  }
}
